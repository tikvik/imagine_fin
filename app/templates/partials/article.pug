article.post.pb-gap
	if proj.project[0].category != "people"
		section.post-date
			h2.mt-1.mb-0.uppercase !{proj.project[0].category}
			p.mt-0 !{proj.project[0].date}
	//- h2.mt-0
	//- 	a.uppercase(href=proj.project[0].category) !{proj.project[0].category}
	//- 	<br> !{proj.project[0].date}
	section.post-body
		header
			h1.mt-0.mb-0.pb-0
				a(href="single"+ index +".html").negative-gap !{proj.project[0].title}
			h2.mt-0 !{proj.project[0].function}
		section.p-0.post-content
			p !{proj.project[0].text}
			
	footer.p-0.post-footer
		if proj.project[0].email
			a.negative-gap.negative-gap-top(href="mailto:"+proj.project[0].email).btn.negative-gap !{proj.project[0].email}
		if proj.project[0].web
			a.btn.negative-gap-top(href=proj.project[0].web , alt="Click to web profile") Profile of !{proj.project[0].title}
		if proj.project[0].image
			img.img-fluid(src=proj.project[0].image alt="!{proj.project[0].text}")
		if proj.project[0].category != "people"
			h2.mt-0
				a(href="single"+ index +".html").negative-gap &#62;
